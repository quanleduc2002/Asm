<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="224dp"
        android:layout_marginTop="27dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="203dp"
            android:layout_height="212dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgKhoaHoc"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/khoahoc" />

            <TextView
                android:id="@+id/tvKhoaHoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Khóa Học" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="218dp"
            android:layout_height="212dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgMap"
                android:layout_width="190dp"
                android:layout_height="129dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/map" />

            <TextView
                android:id="@+id/tvMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Map" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="403dp"
        android:layout_height="170dp"
        android:layout_marginBottom="195dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="207dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgnew"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/tintuc" />

            <TextView
                android:id="@+id/tvnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="New" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgSocial"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/social" />

            <TextView
                android:id="@+id/tvSocial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Social" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>